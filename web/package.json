{
  "name": "@duck-sort/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:prod": "vite build --base /duck-sort/example/web/",
